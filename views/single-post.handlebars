<article class="post">
     <div class="post-title">
        <h1>{{post.title}}</h1>
        <h4>
        Posted by {{post.user.username}} on {{post.created_at}} {{post.comments.length}} comment(s)
        </h4>
      </div>
      <div class="post-text">
        <span>{{post.post_text}}</span>
      </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}