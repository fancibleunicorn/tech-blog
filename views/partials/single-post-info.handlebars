<article class="post">
     <div class="post-title">
        <h1>{{title}}</h1>
        <h4>
        Posted by {{user.username}} on {{format_date created_at}} {{comments.length}} {{format_plural "comment" comments.length}}
        </h4>
      </div>
      <div class="post-text">
        <span>{{post_text}}</span>
      </div>
</article>